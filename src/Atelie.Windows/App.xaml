            <Style TargetType="{x:Type Menu}">
                <Setter Property="FontFamily" Value="Sergoe UI"/>
                <Setter Property="FontSize" Value="10pt"/>
                <Setter Property="Background" Value="#FFF"/>
            </Style>
            <Style TargetType="ToolBar">
                <Setter Property="FontFamily" Value="Sergoe UI"/>
                <Setter Property="Background" Value="#FFF"/>
                
                <!--<Setter Property="Background" Value="#FFF3F2F1"/>-->
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="-2,0,0,0"/>
                <Setter Property="Padding" Value="0"/>
            </Style>
            <Style TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
                <Setter Property="FontFamily" Value="Sergoe UI"/>
                <Setter Property="Margin" Value="0,-2,0,0" />
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <ContentControl Content="{Binding}" Margin="-4,0,-4,-4" FontWeight="Bold" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
                <!--<Setter Property="BorderThickness" Value="1" />-->
                <Setter Property="HeaderTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <ContentControl Content="{Binding}" Margin="0,0,0,0" />
                            <!--<TextBlock Text="Hello World!!!!!!"/>-->
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <ObjectDataProvider x:Key="TipoDeCusto" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="comerciais:TipoDeCusto" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider x:Key="TipoDeRecurso" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="modelos:TipoDeRecurso" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </Application.Resources>
</Application>
